{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "vite --host",
    "dev:landing": "pnpm --dir ./examples/landing dev",
    "dev:vue": "pnpm --dir ./examples/vue-demo dev",
    "dev:react": "pnpm --dir ./examples/react-demo dev",
    "demo": "concurrently \"pnpm dev:landing\" \"pnpm dev:vue\" \"pnpm dev:react\"",
    "build-packages": "pnpm --dir ./packages/navigation-core build && pnpm --dir ./packages/navigation-vue build && pnpm --dir ./packages/navigation-react build",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  },
  "dependencies": {}
}
